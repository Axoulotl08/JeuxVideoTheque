{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
    <div class="searchBar">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button>Trier</button>
        {{ form_end(form) }}
    </div>
    <table>
        <thead>
        <td>Date de session</td>
        <td>Jeu</td>
        <td>Console</td>
        <td>Dur√©e</td>
        </thead>
        {% for session in sessions %}
            <tr>
                <td>{{ session.date| date('d-m-Y') }}</td>
                <td><a href="{{ path('game_id', {id:session.game.id}) }}">{{ session.game.name }}</a></td>
                <td>{{ session.game.console.name }}</td>
                <td>{{ session.sessionTime|stringTime }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
